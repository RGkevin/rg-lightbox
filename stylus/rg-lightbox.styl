// general data

$lightbox-padding = 10px
$transition-duration = 350ms

// Backdrop

.rglightbox-backdrop
	background-color: #000
	position fixed
	left 0
	top 0
	right 0
	bottom 0
	z-index 1001

// fading animation
.rg-fade
	opacity(0)
	transition opacity $transition-duration

	&.rg-fadein
		opacity(.85)

// lightbox

.rglightbox-container
	position: fixed
	top 15px
	left 15px
	right 15px
	bottom 15px
	z-index 1002

.rglightbox
	position: absolute
	left 50%
	top 50%
	width 10px
	height 10px
	margin-left -10px
	margin-top -10px
	background-color: #F1F1F1
	padding $lightbox-padding
	border solid 1px #ccc
	border-radius 2px
	transition all 350ms

	img
		max-width 100%
		max-height 100%
		opacity(1)

		&.rg-fade
			opacity(0)

	&.rg-fadein
		opacity(1)

	.spinner
		left 50% !important
		top 50% !important

.rglightbox-loading

	.rglightbox-left,
	.rglightbox-right,
	.rglightbox-close,
	img
		display: none

.rglightbox-left,
.rglightbox-right,
.rglightbox-close
	display block
	position: absolute

.rglightbox-left
	left $lightbox-padding
	bottom $lightbox-padding

.rglightbox-right
	right $lightbox-padding
	bottom $lightbox-padding

.rglightbox-close
	right $lightbox-padding * 2
	top $lightbox-padding

// close
.rglightbox-close
	font-size 30px
	font-weight: bold
	line-height 1
	color: #000
	text-shadow 0 1px 0 #fff
	opacity .2

	&:hover,
	&:focus
		color: #000
		text-decoration: none
		cursor: pointer
		opacity .5